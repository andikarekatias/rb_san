<h1>Dashboard#index</h1>

<% if current_user %>
    <p>Hello <%= current_user.email %> </p>
    <p>Terakhir login pada <%= current_user.last_sign_in_at.strftime('%d %B %Y %H:%M:%S') %> </p>
    <p>You are a [<%= current_user.role %>]</p>
    <% if current_user.admin? %>
       <p>There are <%= User.count %> users in the system</p>
    <% end %>
    <%= link_to 'Sing Out', destroy_user_session_path, 'data-turbo-method': :delete %>
<% else %>    
    <p>You are not singed in </p>
    <%= link_to 'Sing Up', new_user_registration_path %>
    <%= link_to 'Sing In', new_user_session_path %>
<% end %>