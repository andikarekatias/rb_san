<div data-controller="previews">
    <%= form.label :foto_kapal %> <br>
    <%= form.file_field :foto_kapal,
        direct_upload: true,
        data: { previews_target: "input", action: "change->previews#preview" } %>
    <% if master_kapal.foto_kapal.attached? %>
      <%= image_tag master_kapal.foto_kapal.variant(resize_to_limit: [200, 200]), data: { previews_target: "preview" }, class: "w3-image" %>
    <% else %>
    <%= image_tag "", data: { previews_target: "preview" }, class: "w3-image" %>
    <% end %>
</div>