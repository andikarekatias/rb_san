<p style="color: green"><%= notice %></p>

<%= render @notice %>

<% if current_user == @notice.user %>
<div>
  <%= link_to "Edit this notice", edit_notice_path(@notice) %> |
  <%= link_to "Back to notices", notices_path %>

  <%= button_to "Destroy this notice", @notice, method: :delete %>
</div>
<% end %>


<div class="w3-container">  
  <%= render 'comments/form', notice: @notice, comment: @notice.comments.build, submit_label: "Reply" %>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', notice: @notice, comment: comment %>
  <% end %>
</div>